extends layout

block content
  h1=title

  form.sign-up(method='POST')
    section.form-inputs 
      ul.form-fields
        li
          label(for='username') Enter the secret code:
          input#secret_code.form-control(type='text' name='secret_code' required)
    
    section.form-submit
      button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg